<extension type="module" version="1.7" client="site" method="upgrade">
	<name>Flying Tweets</name>
	<author>xing</author>
	<creationDate>14-Sep-2011</creationDate>
	<copyright>Copyright (C) 2005 - 2008 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@autson.com</authorEmail>
	<authorUrl>www.autson.com</authorUrl>
	<version>1.0.0</version>
	<description>
		<![CDATA[
		Autson Flying Tweets! . http://www.autson.com

		]]>
	</description>

	<files>
		<filename module="mod_flying_tweets">mod_flying_tweets.php</filename>

		<filename>index.html</filename>

        <filename>helper.php</filename>

        <filename>tmpl/default.php</filename>

        <filename>tmpl/index.html</filename>
		<folder>js</folder>
		<folder>elements</folder>
		<folder>css</folder>
		<folder>images</folder>
	</files>
	
	<config>
		<fields name="params" addfieldpath="/modules/mod_flying_tweets/elements">
			<fieldset name="basic">
	<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Settings&lt;/div&gt;" />


	<field name="moduleclass_sfx" type="text" default="" label="Class:" description="specify class to apply" />
	
			<field name="width" type="text" default="" label="Module width" description="Module Width : Leave Blank for auto width" />

		<field name="height" type="text" default="500" label="Module Height" description="Module Height" />

		<field name="term" type="text" default="obama" label="term" description="term to search for" />

		<field name="title" type="text" default="tweets for obama" label="title" description="" />

		<field name="titlelink" type="text" default="http://www.twitter.com" label="Title Link" description="" />
		
		<field name="bird" type="list" default="yes" label="Bird Image?" description="">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</field>
					<field name="birdlink" type="text" default="http://www.twitter.com" label="Bird Link" description="" />

					<field name="animation" type="list" default="fade" label="Animation Type" description="">
			<option value="fade">Fade</option>
			<option value="slide">Slide</option>
		</field>
			
					<field name="avatar" type="list" default="yes" label="avatar" description="">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</field>
			
								<field name="anchors" type="list" default="yes" label="anchors" description="">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</field>
		
		
		<field name="imgwidth" type="text" default="30" label="Avatar Width(px)" description="" />
		<field name="imgheight" type="text" default="30" label="Avatar Height(px)" description="" />

				<field name="timeout" type="text" default="2" label="Interval(sec)" description="" />

	<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Appearance&lt;/div&gt;" />

			

		<field name="extcolor" type="colorpicker" default="#b1d4fc" label="color Exterior" description="" />

		<field name="intcolor" type="colorpicker" default="#ffffff" label="color Interior" description="" />

<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Jquery&lt;/div&gt;" />

<field name="show_jquery" type="radio" default="yes" label="Load jquery" description="">

<option value="yes">Yes</option>

<option value="no">No</option>

</field>

</fieldset>
		</fields>

	</config>

</extension>
















